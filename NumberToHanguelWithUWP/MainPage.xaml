<Page
    x:Class="NumberToHanguelWithUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NumberToHanguelWithUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Height="640" VerticalAlignment="Bottom" HorizontalAlignment="Center">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/phone.jpg"/>
        </Grid.Background>
        <Button x:Name="button" Content="Enter" HorizontalAlignment="Center" Height="56" Margin="269,518,20,66" VerticalAlignment="Center" Width="61" Click="button_Click" Foreground="White">
            <Button.Background>
                <SolidColorBrush Color="{ThemeResource SystemBaseMediumColor}"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="Auto" Margin="55,528,96,80" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="199" TextChanged="textBox_TextChanged"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Height="72" Margin="10,137,0,0" TextWrapping="Wrap" Text="Please Enter Only Number" VerticalAlignment="Top" Width="340" FontSize="22" TextAlignment="Center" FontFamily="Consolas" SelectionHighlightColor="#FF0B0F11" Foreground="White" FontWeight="Bold" />
    </Grid>
</Page>
